<div class="container mt-4">
  <div class="card shadow">
    <div class="card-header d-flex justify-content-between align-items-center bg-primary text-white">
      <h2 class="mb-0">Bodegas</h2>
      <a href="<%= root_path %>" class="btn btn-light">
        <i class="bi bi-arrow-left"></i> Volver
      </a>
    </div>
    
    <div class="card-body">
      <div class="mb-3 text-end">
        <a href="<%= new_warehouse_path %>" class="btn btn-success">
          <i class="bi bi-plus-circle"></i> Nueva Bodega
        </a>
      </div>
      
      <div class="table-responsive">
        <table class="table table-striped table-hover">
          <thead class="table-light">
            <tr>
              <th>Nombre</th>
              <th>Ubicación</th>
              <th>Dirección</th>
              <th>Acciones</th>
            </tr>
          </thead>
          <tbody>
            <% @warehouses.each do |warehouse| %>
              <tr>
                <td><%= warehouse.name %></td>
                <td><%= warehouse.location&.name %></td>
                <td><%= warehouse.address %></td>
                <td>
                  <div class="btn-group" role="group">
                    <a href="<%= warehouse_path(warehouse) %>" class="btn btn-sm btn-info" title="Ver">
                      <i class="bi bi-eye"></i>
                    </a>
                    <a href="<%= edit_warehouse_path(warehouse) %>" class="btn btn-sm btn-warning" title="Editar">
                      <i class="bi bi-pencil"></i>
                    </a>
                    <%= button_to warehouse_path(warehouse), method: :delete, class: "btn btn-sm btn-danger", title: "Eliminar", form: { data: { turbo_confirm: "¿Estás seguro de eliminar esta bodega?" } } do %>
                      <i class="bi bi-trash"></i>
                    <% end %>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      
      <% if @warehouses.empty? %>
        <div class="alert alert-info text-center">
          No hay bodegas registradas. <a href="<%= new_warehouse_path %>">Crear una nueva bodega</a>.
        </div>
      <% end %>
    </div>
  </div>
</div>