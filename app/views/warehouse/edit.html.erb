<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card shadow">
        <div class="card-header d-flex justify-content-between align-items-center bg-primary text-white">
          <h2 class="mb-0">Editar Bodega</h2>
          <a href="<%= warehouses_path %>" class="btn btn-light">
            <i class="bi bi-arrow-left"></i> Volver
          </a>
        </div>
        
        <div class="card-body">
          <%= form_with(model: @warehouse, url: warehouse_path(@warehouse), method: :patch, local: true) do |form| %>
            <% if @warehouse.errors.any? %>
              <div class="alert alert-danger">
                <h4><%= pluralize(@warehouse.errors.count, "error") %> impidieron guardar esta bodega:</h4>
                <ul>
                  <% @warehouse.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>
            
            <div class="row mb-3">
              <div class="col-md-6">
                <div class="form-group">
                  <%= form.label :name, "Nombre", class: "form-label" %>
                  <%= form.text_field :name, class: "form-control", placeholder: "Nombre de la bodega", required: true %>
                </div>
              </div>
              
              <div class="col-md-6">
                <div class="form-group">
                  <%= form.label :location_id, "Ubicaci贸n", class: "form-label" %>
                  <%= form.collection_select :location_id, @locations, :id, :name, { include_blank: "Seleccionar ubicaci贸n" }, { class: "form-select" } %>
                </div>
              </div>
            </div>
            
            <div class="form-group mb-4">
              <%= form.label :address, "Direcci贸n", class: "form-label" %>
              <%= form.text_field :address, class: "form-control", placeholder: "Direcci贸n de la bodega" %>
            </div>
            
            <div class="d-flex justify-content-end gap-2">
              <a href="<%= warehouses_path %>" class="btn btn-secondary">
                <i class="bi bi-x-circle"></i> Cancelar
              </a>
              <%= form.submit "Actualizar", class: "btn btn-primary" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>