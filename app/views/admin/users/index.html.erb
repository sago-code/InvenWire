<% content_for :title, "Administración de Usuarios - InvenWire" %>

<div class="container mt-4">
  <div class="row mb-4">
    <div class="col-md-8">
      <h1>Administración de Usuarios</h1>
    </div>
    <div class="col-md-4 text-end">
      <%= link_to "Crear Nuevo Usuario", new_admin_user_path, class: "btn btn-primary" %>
    </div>
  </div>
  
  <% if notice %>
    <div class="alert alert-success">
      <%= notice %>
    </div>
  <% end %>
  
  <% if alert %>
    <div class="alert alert-danger">
      <%= alert %>
    </div>
  <% end %>
  
  <div class="card shadow-sm">
    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-striped table-hover">
          <thead>
            <tr>
              <th>ID</th>
              <th>Nombre</th>
              <th>Apellido</th>
              <th>Documento</th>
              <th>Email</th>
              <th>Roles</th>
              <th>Acciones</th>
            </tr>
          </thead>
          <tbody>
            <% @users.each do |user| %>
              <tr>
                <td><%= user.id %></td>
                <td><%= user.first_name %></td>
                <td><%= user.last_name %></td>
                <td><%= user.document %></td>
                <td><%= user.email %></td>
                <td>
                  <% user.roles.each do |role| %>
                    <span class="badge bg-primary"><%= role.name %></span>
                  <% end %>
                </td>
                <td>
                  <%= link_to "Editar", edit_admin_user_path(user), class: "btn btn-sm btn-outline-primary" %>
                  <%= button_to "Eliminar", admin_user_path(user), method: :delete, class: "btn btn-sm btn-outline-danger", data: { confirm: "¿Estás seguro?" } %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
  
  <div class="mt-3">
    <%= link_to "Volver al Dashboard", root_path, class: "btn btn-secondary" %>
  </div>
</div>