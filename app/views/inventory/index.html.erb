<h1 class="text-center">Visor de Inventario</h1>

<div class="mb-3 text-end">
  <%= link_to 'Agregar Producto', new_product_path, class: 'btn btn-success' %>
</div>

<table class="table table-bordered table-hover mt-4 shadow">
  <thead class="table-primary text-center">
    <tr>
      <th>ID</th>
      <th>Nombre del Producto</th>
      <th>Descripci√≥n</th>
      <th>Precio</th>
      <th>Existencia</th>
      <th>Bodega</th>
      <th>Creado por</th>
      <th>Acciones</th>
    </tr>
  </thead>
  <tbody>
    <% @productos.each do |producto| %>
      <tr>
        <td><%= producto.id %></td>
        <td><%= producto.name %></td>
        <td><%= producto.description %></td>
        <td><%= number_to_currency(producto.price) %></td>
        <td><%= producto.stock %></td>
        <td><%= producto.warehouse&.name || 'No asignada' %></td>
        <td><%= producto.user&.name || 'Desconocido' %></td>
        <td>
          <%= link_to 'Show', product_path(producto), class: 'btn btn-sm btn-info' %>
          <%= link_to 'Edit', edit_product_path(producto), class: 'btn btn-sm btn-warning' %>
          <%= link_to 'Delete', product_path(producto), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
