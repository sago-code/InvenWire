<div class="container mt-4">
  <h1><%= @product.name %></h1>

  <div class="card mb-4">
    <div class="card-body">
      <p><strong>Descripción:</strong> <%= @product.description %></p>
      <p><strong>Precio:</strong> <%= number_to_currency(@product.price) %></p>
      <p><strong>Stock:</strong> <%= @product.stock %></p>
      <p><strong>Bodega:</strong> <%= @product.warehouse&.name || 'No asignada' %></p>
      <p><strong>Creado por:</strong> <%= @product.user&.first_name || 'Desconocido' %></p>
      <p><strong>Fecha de creación:</strong> <%= @product.created_at.strftime("%d/%m/%Y %H:%M") %></p>
      <p><strong>Última actualización:</strong> <%= @product.updated_at.strftime("%d/%m/%Y %H:%M") %></p>
    </div>
  </div>

  <div class="mb-4">
    <%= link_to 'Editar', edit_product_path(@product), class: "btn btn-warning" %>
    <%= link_to 'Volver', products_path, class: "btn btn-secondary ms-2" %>
  </div>
</div>
