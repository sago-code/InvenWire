<div class="container mt-4">
  <h1>Listado de productos</h1>

  <%= link_to 'Nuevo Producto', new_producto_path, class: 'btn btn-success mb-3' %>

  <table class="table table-striped">
    <thead>
      <tr>
        <th>Nombre</th>
        <th>Descripción</th>
        <th>Precio</th>
        <th>Stock</th>
        <th>Bodega</th>
        <th>Acciones</th>
      </tr>
    </thead>
    <tbody>
      <% @productos.each do |producto| %>
        <tr>
          <td><%= producto.nombre %></td>
          <td><%= producto.descripcion %></td>
          <td><%= number_to_currency(producto.precio) %></td>
          <td><%= producto.stock %></td>
          <td><%= producto.bodega.nombre if producto.bodega %></td>
          <td>
            <%= link_to 'Ver', producto_path(producto), class: "btn btn-info btn-sm" %>
            <%= link_to 'Editar', edit_producto_path(producto), class: "btn btn-warning btn-sm" %>
            <%= link_to 'Eliminar', producto_path(producto), method: :delete, data: { confirm: "¿Seguro que quieres eliminar este producto?" }, class: "btn btn-danger btn-sm" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
